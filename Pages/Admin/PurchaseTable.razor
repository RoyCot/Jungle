<table class="table table-sm table-striped table-bordered">
<thead>
    <tr>
        <th colspan="5" class="text-center">@TableTitle</th>
    </tr>
</thead>
<tbody>
    @if (Purchase?.Count() > 0)
    {
        foreach (Checkout c in Purchase)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Zip</td>
                <th>Purchase</th>
                <th>Quantity</th>

                <td>
                    <button class="btn btn-sm btn-danger" @onclick="(x => PurchaseSelected.InvokeAsync(c.PurchaseId))">
                        @ButtonLabel
                    </button>
                </td>
            </tr>

            foreach (ShoppingCartLineItem scli in c.Lines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@scli.Book.Title</td>
                    <td>@scli.Quantity</td>
                </tr>
            }
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">No Purchases</td>
        </tr>
    }
</tbody>
</table>

@code {

    [Parameter]
    public string TableTitle { get; set; } = "Purchases";

    [Parameter]
    public IEnumerable<Checkout> Purchase { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Purchased";

    [Parameter]
    public EventCallback<int> PurchaseSelected { get; set; }

}