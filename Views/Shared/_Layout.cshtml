<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="text-white p-2">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand m-lg-2" href="">JUNGLE BOOKS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <!--Bootstrap Extra 1: Adding a link to the admin page on the navbar-->
                        <li class="nav-item active">
                            <a class="nav-link" href="/admin">Admin Page</a>
                        </li>
                    </ul>
                    <span class="col-6 text-right">
                        <vc:cart-summary></vc:cart-summary>
                    </span>
                </div>
            </nav>
        </div>
    </div>

    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    <!--Bootstrap Extra 2: Fixed bottom or footer on the page-->
    <div class="fixed-bottom">This footer is a bit sticky... Cannnot get rid of it...</div>
</body>
</html>
