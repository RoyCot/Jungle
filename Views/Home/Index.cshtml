@{
    ViewBag.Title = "JungleBooks: Home";
}

@model BooksViewModel

<h1 class="text-center fw-bolder">Welcome to JungleBooks!</h1>

@foreach(Book b in Model.Books)
 {
    <partial name="BookSummary" model="b" />
 }

<div page-books="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
     class="btn-group m-1"></div>